{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "outDir": "./dist/server",
    "rootDir": "./server",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist", "src"]
}
